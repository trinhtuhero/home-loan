<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>
        %d{dd-MM-yyyy HH:mm:ss.SSS, ${logback.timezone:-Asia/Ho_Chi_Minh}} [%thread] %-5level %logger{36}.%M - %msg%n%ex
      </Pattern>
    </layout>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>